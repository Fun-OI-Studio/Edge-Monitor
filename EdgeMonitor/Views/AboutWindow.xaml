<Window x:Class="EdgeMonitor.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="关于 Edge Monitor" 
        Height="350" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource SurfaceBrush}">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧GIF区域 -->
        <Grid Grid.Column="0">
            <!-- 动画GIF图片 -->
            <Image x:Name="AboutGif" 
                   gif:ImageBehavior.AnimatedSource="pack://application:,,,/Resources/about.gif"
                   Stretch="Uniform"
                   Margin="10"/>
        </Grid>
        
        <!-- 右侧信息区域 -->
        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <TextBlock Text="Edge Monitor" 
                      FontSize="28"
                      FontWeight="Bold"
                      Foreground="{StaticResource TextBrush}"
                      Margin="0,0,0,5"/>
            
            <TextBlock Text="v1.0" 
                      FontSize="16"
                      Foreground="{StaticResource SecondaryTextBrush}"
                      Margin="0,0,0,20"/>
            
            <TextBlock Text="一个监控并弄死Edge的程序" 
                      FontSize="16"
                      Foreground="{StaticResource TextBrush}"
                      TextWrapping="Wrap"
                      Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="作者: " 
                          FontSize="14"
                          Foreground="{StaticResource SecondaryTextBrush}"/>
                <TextBlock Text="Prelina Montelli" 
                          FontSize="14"
                          FontWeight="Medium"
                          Foreground="{StaticResource PrimaryBrush}"/>
            </StackPanel>
            
            <TextBlock Text="启动后监控Microsoft Edge浏览器，当检测到Edge在后台运行且资源占用异常时，会自动终止Edge进程。" 
                      FontSize="12"
                      Foreground="{StaticResource SecondaryTextBrush}"
                      TextWrapping="Wrap"
                      Margin="0,20,0,20"/>
            
            <Button Content="确定" 
                   Width="80" 
                   Height="30"
                   HorizontalAlignment="Right"
                   Style="{StaticResource PrimaryButtonStyle}"
                   Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
